{
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "/index.html",
      "statusCode": 404 
    },
    
    {
      "source": "/post",
      "destination": "/posts",
      "permanent": true
    },
    {
      "source": "/post/",
      "destination": "/posts/",
      "permanent": true
    },
    
    {
      "source": "/post/readings/:path*",
      "destination": "/posts/readings/:path*",
      "permanent": true
    },
    {
      "source": "/post/tech/:path*",
      "destination": "/posts/tech/:path*",
      "permanent": true
    },
    {
      "source": "/post/jottings/:path*",
      "destination": "/posts/jottings/:path*",
      "permanent": true
    },
  ]
}
